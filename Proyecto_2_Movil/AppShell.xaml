<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proyecto_2_Movil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Proyecto_2_Movil.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- Página inicial (única ShellContent visible al inicio) -->
    <ShellContent
        Route="InicioPage"
        ContentTemplate="{DataTemplate views:InicioPage}" />

    <!-- Rutas registradas para navegación dinámica -->
    <ShellContent Route="RegistroJugadoresPage" />
    <ShellContent Route="SeleccionRazaPage" />
    <ShellContent Route="SeleccionArmaPage" />
    <ShellContent Route="CombatePage" />
    <ShellContent Route="ResumenPartidaPage" />

</Shell>