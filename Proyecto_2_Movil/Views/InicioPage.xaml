<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_2_Movil.Views.InicioPage"
             xmlns:vm="clr-namespace:Proyecto_2_Movil.ViewModels"
             BackgroundColor="#1d1b27"
             NavigationPage.HasNavigationBar="False">


    <ContentPage.BindingContext>
        <vm:InicioViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="2*,4*,1*">

        <VerticalStackLayout Grid.Row="0"
                             Padding="20"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
            <Image Source="logo_inicio.png"
                   HeightRequest="150"
                   Aspect="AspectFit"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1"
                     Padding="30"
                     Spacing="25"
                     VerticalOptions="Center"
                     HorizontalOptions="Center">


         <Label Text="Warriors EITHARJAVAL"
         FontSize="49"
         FontAttributes="Bold"
         TextColor="#ffffff"
         HorizontalOptions="Center"
         HorizontalTextAlignment="Center"
         Margin="0,35,0,20"
         FontFamily="serif" />


            <Button Text="Iniciar Partida"
            Command="{Binding IniciarCommand}"
            BackgroundColor="#6750A4"
            TextColor="White"
            CornerRadius="15"
            Padding="15"
            FontSize="20"
            WidthRequest="250"/>

            <Button Text="EstadÃ­sticas"
            Command="{Binding EstadisticasCommand}"
            BackgroundColor="#3E3A55"
            TextColor="White"
            CornerRadius="15"
            Padding="12"
            WidthRequest="250"
            FontSize="18"/>
        </VerticalStackLayout>


        <VerticalStackLayout Grid.Row="2"
                             VerticalOptions="End"
                             HorizontalOptions="Center"
                             Padding="10">
            <Label Text="Proyecto 2 - UTN 2025"
                   FontSize="14"
                   TextColor="#aaaaaa"/>
        </VerticalStackLayout>

    </Grid>

</ContentPage>
